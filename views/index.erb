<!-- List the recipes -->
<% if @recipes.any? %>
  <ul>
    <% @recipes.each do |recipe| %>
      <li><a href="/recipes/<%= recipe.id %>"><%= recipe.title %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>No current recipes available.</p>
<% end %>
