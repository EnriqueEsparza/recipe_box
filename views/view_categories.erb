<h3>View Recipes by Category</h3>

<% @categories.each do |category| %>
  <ul>
      <li> <a href="view_categories/<%= category.id %>"><%= category.name %></a> </li>
  </ul>
<% end %>

<hr>

<h2>Delete Category:</h2>

<form class="form-group" action="/view_categories" method="post">
  <div id="form-group">
    <input type='hidden' name='_method' value="delete">
      <select name='categories_id' class="form-control"style="width: 20%;">
        <% @categories.each() do |category| %>
          <option value="<%= category.id %>"><%= category.name %></option>
        <% end %>
        </select>
  </div> <br>
    <button class="btn btn-danger" type="submit">Delete</button>
</form>
